
@model RoleDetails

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="page-title">Administration</h4>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Administration</a>
                        </li>
                        <li>
                            <a href="#">Role users</a>
                        </li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <form href="/Role/ManageRoleUsers" method="post">
                        <input type="hidden" name="RoleId" value="@Model.Role.Id" />
                        <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                        <h4 style="height:40px;padding:10px;" class="bg-info text-white p-1 text-center">@Model.Role.Name add to the role</h4>
                        <table class="table table-bordered table-sm">
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">All users have a role</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td style="width:150px;">
                                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <hr />
                        <h4 style="height:40px;padding:10px;" class="bg-info text-white p-1 text-center">@Model.Role.Name delete from role</h4>
                        <table class="table table-bordered table-sm">
                            @if (Model.Members.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">There are no users in this role</td>
                                </tr>
                            }
                            else
                            { 
                                foreach (var user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td style="width:150px;">
                                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>



        </div> <!-- container -->

    </div> <!-- content -->

    <footer class="footer">
        2022 © Sintra.
    </footer>

</div>

