@model UserClaimsViewModel

    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="page-title">Administration</h4>
                        <ol class="breadcrumb">
                            <li>
                                <a href="#">Administration</a>
                            </li>
                            <li>
                                <a href="#">
Role permissions</a>
                            </li>
                        </ol>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">

                        <form asp-controller="Role" asp-action="ManageUserClaims" method="post">
                            <div class="card">
                                <div class="card-header">
                                    <h2>Manage User CLaims</h2>
                                </div>
                                <div class="card-body">
                                    @for (int i = 0; i < Model.Claims.Count; i++)
                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.UserId" />
                                            <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                                            <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                            <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                                                @Model.Claims[i].ClaimType
                                            </label>
                                        </div>
                                    }
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="card-footer">
                                    <input type="submit" class="btn btn-primary" style="width:auto" value="Update" />
                                    <a asp-action="Roles" class="btn btn-primary" style="width:auto">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>



            </div> <!-- container -->

        </div> <!-- content -->

        <footer class="footer">
            2022 © Sintra.
        </footer>

    </div>

