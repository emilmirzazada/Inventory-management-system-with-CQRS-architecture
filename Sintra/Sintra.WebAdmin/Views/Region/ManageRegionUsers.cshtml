
@model RegionDetailsModel

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="page-title">Administration</h4>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Administration   </a>
                        </li>
                        <li>
                            <a href="#">Region users</a>
                        </li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <form href="/Region/ManageRegionUsers" method="post">
                        <input type="hidden" name="RegionId" value="@Model.Region.Id" />
                        <input type="hidden" name="RegionName" value="@Model.Region.Name" />
                        <h4 style="height:40px;padding:10px;" class="bg-info text-white p-1 text-center">@Model.Region.Name regionuna əlavə et</h4>
                        <table class="table table-bordered table-sm">
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">All users belong to this region</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td style="width:150px;">
                                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <hr />
                        <h4 style="height:40px;padding:10px;" class="bg-info text-white p-1 text-center">@Model.Region.Name regionundan sil</h4>
                        <table class="table table-bordered table-sm">
                            @if (Model.Members.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">There are no users for this region</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td style="width:150px;">
                                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>



        </div> <!-- container -->

    </div> <!-- content -->

    <footer class="footer">
        2022 © Sintra.
    </footer>

</div>

